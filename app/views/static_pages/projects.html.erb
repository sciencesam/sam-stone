
<div class="container">
    <% Dir["app/views/static_pages/projects/*"].sort.reverse.in_groups_of(3,false).each do |group| %>
    <div class="row">
        <% group.each do |file| %>
    	    <div class="col-md-4">
    		        <div class="card">
    			        <%= render :file => Rails.root.join(file).to_s %>
    		        </div>
        	</div>
    	<% end %>
    	<div class="clearfix"></div>
    <% end %>
    </div>

</div>   
