<div class="container">
    <div class="row">
       <% @posts.each do |post| %>
    	    <div class="col-md-4">
    	          <%= link_to post_path(post) do %>
    		        <div class="card">
    			        <div class="card-image">
                    <img class="img-responsive" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRYFK9OqBI5Irl7wqgdNAuM_dX0MdnM4M-K7i7H-X4AR2XVjh_zbA">
                      <span class="card-title"><%= post.title %></span>
                  </div>
                
                  <div class="card-content">
                    <p><%= raw(post.abstract).truncate(358) %></p>
                    <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
                    <h6>Read more...</h6>
                  </div>
    		        </div>
    		        <% end %>
        	</div>
    	<% end %>
    	<div class="clearfix"></div>
    </div>

</div>   
<% @products.each do |post| %>
      <div class='col-md-4'>
        <div class= "panel panel-default">
          <div class= "panel-body">
            <div class="crop"><img class="img-responsive" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRYFK9OqBI5Irl7wqgdNAuM_dX0MdnM4M-K7i7H-X4AR2XVjh_zbA"></div>
          </div>
          <div class="panel-footer clearfix">
            <div class="panelFooty">
            <h3><%= post.title %></h3>
             <div class="card-content">
                <p><%= raw(post.abstract).truncate(358) %></p>
                <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
                <h6>Read more...</h6>
              </div>
          </div>
        </div>
      </div>
<% end %>
