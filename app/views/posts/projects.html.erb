  
<% @posts.each do |post| %>
      <div class='col-md-4'>
        <div class= "panel panel-default">
          <div class= "panel-body">
            <div class="crop"><img class="img-fluid" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRYFK9OqBI5Irl7wqgdNAuM_dX0MdnM4M-K7i7H-X4AR2XVjh_zbA"></div>
          </div>
          <div class="panel-footer clearfix">
            <div class="panelFooty">
            <h3><%= post.title %></h3>
             <div class="card-content">
                <p><%= raw(post.abstract).truncate(358) %></p>
                <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
                <h6>Read more...</h6>
                <% if admin_signed_in? %>
        <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
              </div>
          </div>
        </div>
      </div>
<% end %>
