<% @posts.sort.reverse.in_groups_of(3,false).each do |group| %>
<div class="row">
  <% group.each do |post| %>
  <div class="col-sm-4">
<div class="card">
 
  
     <%= link_to image_tag(post.image.url, class: 'card-img-top'), post.image.url, target: '_blank' %>
    <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= raw(post.abstract).truncate(358) %></p>
    <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
    <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
    <%if admin_signed_in? && current_admin.admin? %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
  </div>
</div>
</div>
<% end %>
</div>
<% end %>


